---
import { Icon } from "astro-icon/components";
---


<div class="flex flex-col ease-linear">

  <button id="accordion-button" class="flex justify-between items-center">
      
              <slot name="title" />
  
              <Icon id={"chevron-down"} name={"chevron-down"} size={32} class={"text-[#3C4043]"}/>
              <Icon id={"chevron-up"} name={"chevron-up"} size={32} class="hidden text-[#3C4043]" />
  
  </button>
  <div id="accordion-content" class="max-h-0 overflow-hidden duration-100 ease-linear">
  

      <slot name="options" />
      
  
    </div>
  </div>

<script>
const accordionBtn = document.getElementById("accordion-button")
const accordionContent = document.getElementById("accordion-content")
const chevronUp = document.getElementById("chevron-up");
  const chevronDown = document.getElementById("chevron-down");


  const toggleAccordion = () => {
  accordionContent?.classList.toggle("max-h-fit")
  accordionContent?.classList.toggle("py-1")

  chevronUp?.classList.toggle("hidden");
    chevronDown?.classList.toggle("hidden");

}

accordionBtn?.addEventListener("click", toggleAccordion)
  
</script>
